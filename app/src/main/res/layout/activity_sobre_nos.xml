<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/txtSobreNos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_x="34dp"
        android:layout_y="75dp"
        android:text="@string/SobreNós"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/txtSobreNos2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="34dp"
        android:layout_y="75dp"
        android:layout_below="@+id/txtSobreNos"
        android:text="@string/SobreNós2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:src="@drawable/twitter"
        android:layout_below="@+id/txtSobreNos2"
        android:id="@+id/imgBtnTwitter"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="45dp"

        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:src="@drawable/facebook"
        android:layout_below="@+id/txtSobreNos2"
        android:layout_toRightOf="@+id/imgBtnTwitter"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="35dp"
        android:id="@+id/imgBtnFace"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_marginTop="45dp"
        android:src="@drawable/instagram"
        android:layout_marginLeft="35dp"
        android:layout_below="@+id/txtSobreNos2"
        android:layout_toRightOf="@+id/imgBtnFace"
        android:id="@+id/imgBtnInsta"/>
</RelativeLayout>